{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "..",
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "@OneCoach/lib-shared": [
        "../../coachone-shared/packages/lib-shared/src/index.ts"
      ],
      "@OneCoach/lib-shared/*": [
        "../../coachone-shared/packages/lib-shared/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}